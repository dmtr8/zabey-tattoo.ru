extends include/layout
append sharedVars
    - const pageUrl = '/';
    - const pageTitle = 'Ковалева';
    - const bodyAdditionClass = '';
    - const pageAdditionClass = 'main-page';
block content
    section.inner
        h2.title-style-other-pages Мастер
        div.inner
            div.master-container.mx-auto
                div.master-box
                    div.master-box__text-content
                        p.master-box__name Мария
                            span.master-box__profession  / Графика
                    p.master-box__description Меня зовут Мария Ковалёва, и я с радостью помогу тебе сделать татуировку своей мечты! Работаю мастером татуировки в целом уже более 6 лет, а последние 4 года - в самой уютной студии Забей, в самом лучшем коллективе. Я - универсал, могу работать во многих техниках, но отдаю предпочтение графике и лайнворку. Наглядно покажу тебе какими кайфовыми могут быть контура! До встречи на сеансе!
                    a(href="https://www.instagram.com/m.kovaleva.tattoo/" target='_blank')
                        img.master-box__inst(src=require("../images/masters/instagram.svg"))
                img.master__photo.master__photo--size(src=require("../images/index/kovaleva.jpg"))
